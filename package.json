{
  "name": "ironalarm",
  "version": "0.0.1",
  "description": "Reliable task scheduling for Cloudflare Durable Objects - implements resilient long-running task patterns with eviction safety",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "bun run build.ts",
    "prepublishOnly": "bun run build",
    "typecheck": "bun --version && tsc --noEmit",
    "test": "bun test"
  },
  "keywords": [
    "cloudflare",
    "durable-objects",
    "scheduling",
    "task-queue",
    "reliable",
    "eviction",
    "resilient",
    "ai-agents",
    "long-running-tasks"
  ],
  "author": "Jordan Coeyman <jordan@coey.dev>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/acoyfellow/ironalarm"
  },
  "bugs": {
    "url": "https://github.com/acoyfellow/ironalarm/issues"
  },
  "homepage": "https://github.com/acoyfellow/ironalarm#readme",
  "publishConfig": {
    "registry": "https://registry.npmjs.org/",
    "access": "public"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "peerDependencies": {
    "typescript": "^5",
    "effect": "^3.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251219.0",
    "@types/bun": "latest",
    "@types/node": "^25.0.3",
    "esbuild": "^0.27.2",
    "typescript": "^5"
  }
}

